{
  "title": "GARD",
  "description": "Connector for handling GARD issues",
  "credentials": {
    "fields": {
        "baseUrl": {
            "label": "Base URL for your GARD/JIRA instance:",
            "viewClass": "TextFieldView",
            "required": true
        },
        "apiKey": {
            "label": "API Key",
            "viewClass": "TextFieldView",
            "required": true
        }
    }
  },
  "triggers": { 
      "getNewIssues": {
          "main": ".lib/triggers/getNewIssues.js",
          "type": "polling",
          "title": "Get New Issues",
          "fields": {
            "projects": {
                "label": "Project codes:",
                "required": "true",
                "viewClass": "TextFieldViewWithNote",
                "note": "Please enter comma separated project codes",
                "model": "*"
            },
            "startDateTime": {
                "label": "Issues created since:",
                "required": true,
                "viewClass": "TextFieldViewWithNote",
                "placeholder": "yyyy-mm-dd hh:mm",
                "note": "Please use <code><b>yyyy-mm-dd hh:mm</b></code> format and use the same timezone as the one configured in JIRA.",
                "model": "*"
            }
          },
          "metadata": {
              "out": "./lib/schemas/issue.json"
          }
      }
  },
  "actions": { 
      "createNewIssues": {
          "main": ".lib/actions/createNewIssues.js",
          "title": "Create new issues",
          "fields": {
              "id": {
                "label": "Text ID",
                "required": true,
                "viewClass": "TextFieldView"
              }
          },
          "metadata": {
              "in": ".lib/schemas/issueList.json",
              "out": ".lib/schemas/issueList.json"
          }
      }
  }
}
