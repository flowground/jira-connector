{
  "title": "GARD",
  "description": "Connector for handling GARD issues",
  "credentials": {
    "fields": {
        "baseUrl": {
            "label": "Base URL",
            "viewClass": "TextFieldView",
            "required": true
        },
        "apiKey": {
            "label": "API Key",
            "viewClass": "TextFieldView",
            "required": true
        }
    }
  },
  "triggers": { 
      "getNewIssues": {
          "main": ".lib/triggers/getNewIssues.js",
          "type": "polling",
          "title": "Get New Issues",
          "fields": {
            "startDate": {
                "label": "Select Stat Date",
                "required": true,
                "viewClass": "TextFieldView",
                "placeholder": "YYYY-MM-DD",
                "model": "*"
            }
          },
          "metadata": {
              "out": "./lib/schemas/issuesList.json"
          }
      }
  },
  "actions": { 
      "createNewIssues": {
          "main": ".lib/actions/createNewIssues.js",
          "title": "Create new issues",
          "fields": {
              "id": {
                "label": "Text ID",
                "required": true,
                "viewClass": "TextFieldView"
              }
          },
          "metadata": {
              "in": ".lib/schemas/issueList.json",
              "out": ".lib/schemas/issueList.json"
          }
      }
  }
}
